@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if(Model.Count() == 0)
{
    <p> No customers yet </p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>
                    Customers
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @customer.Id
                    </td>
                    <td>
                        @customer.Name
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

